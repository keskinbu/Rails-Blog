<%= render 'shared/page_title', title: @article.title %>

<div class="container">
  
  <% if logged_in? %>
  <div class="">
    <%= link_to "Edit this Article", edit_article_path(@article), class: "btn btn-success pull-right" %>
  </div>
  <% end %>
  <div class="col-md-12">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="picture">
        <%= image_tag(@article.picture.url, class: "article_picture img-response") if @article.picture? %>
      </div>
    
      <div class="article_content">
        <%= simple_format(@article.content) %>
      </div>
    </div>
    <div class="col-md-2 social_button">
      <li><%= facebook_button %></li>
      <li><%= twitter_button %></li>
      <li><%= google_plus_button %></li>
      <li><%= linkedin_button %></li>
    </div>
    <div class="col-md-4 pull-left center">
      <p>Written by: <%= @article.user.first_name %> <%= @article.user.last_name %></p>
    </div>
  </div>
</div>
<h5><%= link_to "Return to Articles Listing", articles_path, class: "btn btn-warning btn-small" %></h5>