<h1>All Articles</h1>
<hr/>

<% @articles.each do |article| %>
  <div class="row">
    
    <div class="col-md-2">
      <section class="article_info center">
        
      </section>
    </div>
    <div class="col-lg-8 well">
      <h4><%= link_to article.title, " " %></h4>
      <p><%= article.content %></p>
      <p>
        <span class="quiet"><small> <%= time_ago_in_words(article.created_at) %> ago</small></span>
      </p>
    </div>
    
  </div>
<% end %>


